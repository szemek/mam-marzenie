<h2>Zarejestruj się</h2>

<div class='row'>
  <div class='col-md-8'>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { url: 'form' }) do |f| %>
      <%= devise_error_messages! %>

      <div class='form-group'>
        <%= f.label :fullname %>
        <%= f.text_field :fullname, class: 'form-control', autofocus: true, placeholder: "Przedstaw się, proszę"%>
      </div>

      <div class='form-group'>
        <%= f.label :region %>
        <%= f.text_field :region, class: 'form-control', placeholder: "Oddział, w którym działasz", list: 'regions'%>
        <%= render 'volunteers/regions' %>
      </div>

      <div class='form-group'>
        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control', placeholder: "Twój email"%>
      </div>

      <div class='form-group'>
        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control', placeholder: "Minimum 6 znaków"
        %>
      </div>

      <div class='form-group'>
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, class: 'form-control', placeholder: "Powtórz proszę swoje hasło"%>
      </div>

      <div>
        <%= f.submit 'Zarejestruj się', id: :user_sign_up_button, class: 'btn btn-default'%>
      </div>
    <% end %>
  </div>
</div>
