<%- model_class = Dream -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<div class="row">
  <div class="col-lg-6">
    <%= form_tag(search_dreams_path, method: :get) do %>
      <div class="input-group">
        <span class="input-group-btn">
          <%= text_field_tag :name, nil, class: 'form-control'%>
          <%= submit_tag t('search'), class: 'btn btn-default' %>
        </span>
      </div>
    <% end %>
  </div>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:child_fullname) %></th>
      <th><%= model_class.human_attribute_name(:child_age) %></th>
      <th><%= model_class.human_attribute_name(:status) %></th>
    </tr>
  </thead>
  <tbody>
    <% @dreams.each do |dream| %>
      <tr>
        <td><%= link_to dream.title, dream %></td>
        <td><%= dream.child_fullname %></td>
        <td><%= dream.child_age %></td>
        <td><%= dream.status %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_dream_path,
            :class => 'btn btn-primary' %>
