<%- model_class = Dream -%>
<div class="page-header">
  <h1><%= Dream.model_name.human(count: 2) %></h1>
</div>
<div class='row'>
  <div class='col-lg-11'>
      <%= render partial: 'search', locals: { search: @search } %>
  </div>
  <div class='col-lg-1'>
    <%= link_to t('.new', default: t('helpers.links.new')),
      new_dream_path,
      class: 'btn btn-primary'
    %>
  </div>
</div>
<br/>
<ul class='list-unstyled'>
  <% @dreams.each do |dream| %>
    <li>
      <blockquote>
        <div class='row'>
          <div class='col-md-10'>
            <p>
              <%= image_tag dream.avatar.thumb.url, class: 'img-thumbnail' %>&nbsp;
              <%= link_to dream.title, dream %>
            </p>
            <footer><%= dream.child_fullname %>, <%= dream.child_age %> <%= dream.region %></footer>
          </div>
          <div class='col-md-1'>
            <%= dream.category %>
          </div>
          <div class='col-md-1'>
            <%= dream_status(dream.status) %>
          </div>
        <div>
      </blockquote>
    </li>
  <% end %>
</ul>
