<%- model_class = Dream -%>
<div class='page-header'>
  <div class='row'>
    <div class='col-lg-10'>
      <h1><%= model_class.model_name.human(count: 2) %></h1>
    </div>
    <div class='col-lg-1'>
      <%= form_tag(export_dreams_path) do %>
        <%= hidden_field_tag :dreams_ids, extract_ids(@dreams) %>
        <%= submit_tag t('export'), class: 'btn btn-success'%>
      <% end %>
    </div>
    <div class='col-lg-1'>
      <%= link_to t('.new', default: t('helpers.links.new')),
        new_dream_path,
        class: 'btn btn-primary'
      %>
    </div>
  </div>
</div>

<div class='row'>
  <div class='col-lg-12'>
      <%= render partial: 'search', locals: { search: @search } %>
  </div>
</div>
<br/>

<ul class='list-unstyled'>
  <% @dreams.each do |dream| %>
    <li>
      <blockquote>
        <div class='row'>
          <div class='col-md-10'>
            <p>
              <%= image_tag dream.avatar.thumb.url, class: 'img-thumbnail' %>&nbsp;
              <%= link_to dream.title, dream %>
            </p>
            <footer><%= dream.child_fullname %>, <%= dream.child_age %> <%= dream.region %></footer>
          </div>
          <div class='col-md-1'>
            <%= dream.category %>
          </div>
          <div class='col-md-1'>
            <%= dream_status(dream.status) %>
          </div>
        <div>
      </blockquote>
    </li>
  <% end %>
</ul>
