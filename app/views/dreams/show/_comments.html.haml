%ul.list-unstyled
  - @comments.each do |comment|
    %li
      %blockquote
        .row
          .col-md-10
            %p
              = comment.body
            %footer= link_to comment.user.fullname, volunteer_path(comment.user_id)
          - if comment.user == current_user
            .col-md-1
              = form_for [@dream, comment], method: :delete do |f|
                = f.submit 'Usu≈Ñ', class: 'btn btn-danger'
