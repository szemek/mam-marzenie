<%= search_form_for search,
  url: dreams_path,
  role: 'form',
  html: { class: 'form-inline' } do |f|
%>
  <div class='form-group'>
    <%= f.label :title_cont, class: 'sr-only' %>
    <%= f.text_field :title_cont,
      class: 'form-control input-sm',
      placeholder: t('.title')
    %>
  </div>

  <div class='form-group'>
    <%= f.label :region_cont, class: 'sr-only' %>
    <%= f.text_field :region_cont,
      class: 'form-control input-sm',
      placeholder: t('.region'),
      list: 'regions'
    %>
    <%= render 'volunteers/regions' %>
  </div>

  <div class='form-group'>
    <%= f.label :category_cont, class: 'sr-only' %>
    <%= f.select :category_cont, options_for_select(
      [['Kategoria', '']] + Dream.categories_collection,
      selected: ''), {},
      class: 'form-control input-sm'
    %>
    <%= f.date_field :updated_at,
      class: 'form-control input-sm'
    %>
  </div>

  <div class='form-group'>
    <%= f.select :status_cont, options_for_select(
        [['Stan', '']] + dream_statuses,
        selected: ''), {},
        class: 'form-control input-sm'
        %>
  </div>
  <%= f.submit 'Szukaj', class: 'btn btn-default btn-sm' %>
  <%= f.button 'Wyczyść', type: :reset, class: 'btn btn-sm' %>
<% end %>
