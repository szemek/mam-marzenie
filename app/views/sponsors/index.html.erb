<%- model_class = Sponsor -%>
<div class="page-header">
  <h1><%= t('.title') %></h1>
</div>
<div class="row">
  <div class="col-lg-6">
    <%= render partial: 'search', locals: { search: @search } %>
  </div>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:fullname) %></th>
    </tr>
  </thead>
  <tbody>
    <% @sponsors.each do |sponsor| %>
      <tr>
        <td><%= link_to sponsor.fullname, sponsor_path(sponsor) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_sponsor_path,
            :class => 'btn btn-primary' %>
