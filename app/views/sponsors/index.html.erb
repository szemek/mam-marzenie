<%- model_class = Sponsor -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<div class="row">
  <div class="col-lg-6">
    <%= form_tag(search_sponsors_path, method: :get) do %>
      <div class="input-group">
        <span class="input-group-btn">
          <%= text_field_tag :fullname, nil, class: 'form-control'%>
          <%= submit_tag t('search'), class: 'btn btn-default' %>
        </span>
      </div>
    <% end %>
  </div>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:fullname) %></th>
    </tr>
  </thead>
  <tbody>
    <% @sponsors.each do |sponsor| %>
      <tr>
        <td><%= link_to sponsor.fullname, sponsor_path(sponsor) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_sponsor_path,
            :class => 'btn btn-primary' %>
