<% model_class = User %>

<h1><%= t :volunteers, scope: [:layouts] %></h1>
<div class="row">
  <div class="col-lg-6">
    <%= render partial: 'search', locals: { search: @search } %>
  </div>
</div>
<br/>
<ul class='list-unstyled'>
  <% @users.each do |user| %>
    <li>
      <blockquote>
        <div class='row'>
          <div class='col-md-9'>
            <p>
              <address>
                <strong><%= link_to user.fullname, volunteer_path(user) %></strong><br/>
                <small><%= user.region %><br/>
                <%= mail_to user.email %></small>
              </address>
            </p>
          </div>
          <div class='col-md-2'>
            <small><%= l user.last_sign_in_at, format: :very_short %></small>
          </div>
          <div class='col-md-1'>
            <span class='badge'><%= user.dreams.count %></span>
          </div>
        <div>
      </blockquote>
    </li>
  <% end %>
</ul>
