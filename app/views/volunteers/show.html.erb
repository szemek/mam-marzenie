<div class='page-header'>
  <h3><%= @user.fullname %></h3>
</div>

<div class='volunteer'>
  <div class='region'>
    <%= @user.region %>
  </div>
  <div class='email'>
    <a href="mailto:<%= @user.email %>">
      <%= @user.email %>
    </a>
  </div>
  <div class='last-login'>
    <strong>
      <%= t('.last_activity_at') %>:
    </strong>
    <%= l(@user.last_sign_in_at, format: :long) %>
  </div>
  <div>
    <ul>
      <% @dreams.each do |dream| %>
        <li><%= link_to dream.title, dream_path %></li>
      <% end %>
    </ul>
  </div>
</div>
