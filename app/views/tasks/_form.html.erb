<div class='row'>
  <div class='col-md-4'>
    <%= simple_form_for task,
      defaults:{
        wrapper_html: { class: 'form-group'},
        input_html: { class: 'form-control' }
      } do |f|
    %>
      <%= f.input :sponsor %>
      <%= f.select :result, [[:pending, nil],[:success, true],[:failed, false]] %>
      <%= f.input :description, as: :text%>
      <%= f.submit nil, class: 'btn btn-default' %>
    <% end %>
  </div>
</div>